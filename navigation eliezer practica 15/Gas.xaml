<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="navigation_eliezer_practica_15.Gas"
             Title="Gas">
    <VerticalStackLayout Spacing="25" Padding="30,0">
        <Label Text="GASOLINERA" 
               FontSize="30"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="GreenYellow"/>
        <Image Source="GASOLINA.jpg" 
        HeightRequest="200"
               WidthRequest="300"
               HorizontalOptions="Center"/>

        <Label Text="Digite cantidad de galones"
               FontSize="15"/>
        <Entry x:Name="canGas" Placeholder="Galones"
               Keyboard="Numeric"/>
        
        <Label Text="El costo total es: "
               HorizontalOptions="Center"
               FontAttributes="Bold"
               TextColor="GreenYellow"
               FontSize="18"
               x:Name="cosTotal"/>

        <Button Text="Calcular"
                BorderColor="GreenYellow"
                Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>